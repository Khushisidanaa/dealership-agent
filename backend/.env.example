# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=dealership_agent

# OpenAI (set OPENAI_API_KEY in .env; never commit a real key; revoke any key exposed in chat/email)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Twilio (voice script + SMS/calls)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15551234567

# Deepgram (voice agent)
DEEPGRAM_API_KEY=your-deepgram-api-key

# MarketCheck (vehicle listings)
MARKETCHECK_API_KEY=your-marketcheck-api-key

# Google Maps (Geocoding + Places API for dealership search)
GOOGLE_MAPS_API_KEY=

# Foxit PDF Services (document extraction / Carfax, etc.)
FOXIT_API_HOST=https://na1.fusion.foxit.com
FOXIT_CLIENT_ID=your-client-id
FOXIT_CLIENT_SECRET=your-client-secret

# Server / Voice script
# Public URL for Twilio webhooks (e.g. https://xxx.ngrok-free.dev â€” no trailing slash) for local development
# Needs to be replaced with the public URL of the server when deployed
SERVER_BASE_URL=https://your-subdomain.ngrok-free.dev
# Optional: number to call when voice script starts (e.g. +15551234567)
TO_NUMBER=+15551234567
# Port the voice script server listens on
PORT=5000
